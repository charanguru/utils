{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "max-len": ["error", 100],
    "object-shorthand": "error",
    "comma-dangle": ["error", "always-multiline"],
    "no-console": 0,
    "no-var": ["error"],
    "strict": ["error", "global"],
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }]
  }
}
